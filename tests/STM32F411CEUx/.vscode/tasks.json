{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "power_on",
      "command": "JLinkExe -CommandFile .vscode/jlink/power-on.jlink",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "power_off",
      "command": "JLinkExe -CommandFile .vscode/jlink/power-off.jlink",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "build_app",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "make -j 4",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build_all",
      "dependsOn": [
        "build_app"
      ]
    },
    {
      "label": "flash_mcu",
      "type": "shell",
      "command": "/opt/st/stm32cubeclt_1.19.0/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
      "args": [
        "-c",
        "port=SWD",
        "-d",
        "./build/STM32F411CEUx.elf",
        "-v",
        "-rst"
      ],
      "problemMatcher": []
    },
    {
      "label": "open_serial_monitor",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "screen -D -r stm32_serial || screen -S stm32_serial /dev/ttyUSB0 115200"
      ],
      "problemMatcher": []
    },
    {
      "label": "kill_existing_screen",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "screen -S stm32_serial -X quit || true"
      ],
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "build_flash_serial",
      "dependsOn": [
        "kill_existing_screen",
        "build_app",
        "flash_mcu",
        "open_serial_monitor"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}